{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/typings",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "lib": [
      "ES2015",
      "ES2019.Array",
      "DOM"
    ],
    "types": [
      "node",
      "symbol-observable"
    ],
    "paths": {
      "@infr": [
        "./infr"
      ],
      "@domain": [
        "./domain"
      ],
      "@app": [
        "./app"
      ],
      "@ui": [
        "./ui"
      ],
      "solid-auth-cli": [
        "solid-auth-client"
      ],
      "solidocity": [
        "../solidocity"
      ]
    },
    "plugins": [
      {
        "transform": "@hypertype/tools/plugins/absolute",
        "after": true
      }
    ]

  },
  "exclude": [
    "dist",
    "node_modules",
    "tests",
    "jest.config.js"
  ]
}
